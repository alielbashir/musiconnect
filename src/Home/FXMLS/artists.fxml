<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Home.Controllers.artists">
   <columnConstraints>
      <ColumnConstraints/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints/>
   </rowConstraints>
   <AnchorPane prefHeight="479.0" prefWidth="968.0" styleClass="main-side-bar-color" stylesheets="@styleSheet.css">
      <Pane id="main-menu" layoutX="-5.0" prefHeight="479.0" prefWidth="245.0" styleClass="main-side-bar-color"
            stylesheets="@styleSheet.css">
         <ImageView fitHeight="40.0" fitWidth="41.0" layoutX="20.0" layoutY="23.0" pickOnBounds="true"
                    preserveRatio="true">
            <Image url="@../Resources/music-notes.png"/>
         </ImageView>
         <Text id="login" fill="WHITE" layoutX="66.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0"
               text="Musiconnect">
            <font>
               <Font name="Gubbi" size="22.0"/>
            </font>
         </Text>
         <Circle fx:id="profilePicture" fill="WHITE" layoutX="116.0" layoutY="124.0" radius="46.0" stroke="BLACK"
                 strokeType="INSIDE"/>
         <Text fx:id="displayName" fill="#fcf3f3" layoutX="72.0" layoutY="193.0" strokeType="OUTSIDE"
               strokeWidth="0.0" text="Display Name" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="13.0"/>
            </font>
         </Text>
         <Button id="myPlayLists" fx:id="logout" layoutX="24.0" layoutY="337.0" mnemonicParsing="false"
                 onAction="#logoutApp" prefHeight="50.0" prefWidth="205.0" styleClass="menu-button" text="Logout"
                 textFill="WHITE">
            <font>
               <Font size="14.0"/>
            </font>
         </Button>
         <Button id="myPlayLists" fx:id="exit" layoutX="25.0" layoutY="394.0" mnemonicParsing="false"
                 onAction="#close" prefHeight="50.0" prefWidth="205.0" styleClass="menu-button" text="Exit App"
                 textFill="WHITE">
            <Font size="14.0"/>
         </Button>
      </Pane>
      <Pane layoutX="240.0" prefHeight="99.0" prefWidth="732.0" styleClass="main-side-bar-color"
            stylesheets="@styleSheet.css">
         <Text fill="#fcf3f3" layoutX="65.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0"
               text="Admin Panel">
            <font>
               <Font size="32.0"/>
            </font>
         </Text>
         <ChoiceBox fx:id="navigator" layoutX="282.0" layoutY="32.0" prefHeight="40.0" prefWidth="311.0"/>
         <Button id="myPlayLists" fx:id="navigate" layoutX="609.0" layoutY="31.0" mnemonicParsing="false"
                 onAction="#navigate" prefHeight="40.0" prefWidth="92.0" styleClass="flat-button" text="navigate"
                 textFill="WHITE">
            <Font size="14.0"/>
         </Button>
      </Pane>
      <ImageView fitHeight="37.0" fitWidth="37.0" layoutX="261.0" layoutY="94.0" pickOnBounds="true"
                 preserveRatio="true">
         <Image url="@../Resources/artists.png"/>
      </ImageView>
      <Text fill="WHITE" layoutX="313.0" layoutY="123.0" strokeType="OUTSIDE" strokeWidth="0.0"
            text="Artists Section">
         <font>
            <Font size="15.0"/>
         </font>
      </Text>
      <Pane layoutX="687.0" layoutY="102.0" prefHeight="366.0" prefWidth="274.0" styleClass="container">
         <Text fill="WHITE" layoutX="73.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0"
               text="Artists control">
            <font>
               <Font size="20.0"/>
            </font>
         </Text>
         <ImageView fitHeight="37.0" fitWidth="40.0" layoutX="22.0" layoutY="8.0" pickOnBounds="true"
                    preserveRatio="true">
            <Image url="@../Resources/add.png"/>
         </ImageView>
         <TextField fx:id="name" layoutX="26.0" layoutY="76.0" prefHeight="31.0" prefWidth="218.0"
                    promptText="name"/>
         <ChoiceBox fx:id="Country" layoutX="26.0" layoutY="118.0" prefHeight="31.0" prefWidth="218.0"/>
         <TextField fx:id="picturePath" editable="false" layoutX="28.0" layoutY="159.0" prefHeight="31.0"
                    prefWidth="167.0" promptText="Profile picture"/>
         <Button id="myPlayLists" fx:id="navigate1" layoutX="196.0" layoutY="159.0" mnemonicParsing="false"
                 onAction="#navigate" prefHeight="31.0" prefWidth="50.0" text="Select" textFill="#403c3c">
            <font>
               <Font size="10.0"/>
            </font>
         </Button>
         <Button id="myPlayLists" fx:id="add" layoutX="28.0" layoutY="297.0" mnemonicParsing="false"
                 onAction="#addArtist" prefHeight="31.0" prefWidth="71.0" styleClass="container-button"
                 text="Create"/>
         <Button id="myPlayLists" fx:id="edit" layoutX="107.0" layoutY="298.0" mnemonicParsing="false"
                 onAction="#editArtist" prefHeight="31.0" prefWidth="71.0" styleClass="container-button"
                 text="Update"/>
         <Button id="myPlayLists" fx:id="delete" layoutX="185.0" layoutY="298.0" mnemonicParsing="false"
                 onAction="#deleteArtist" prefHeight="31.0" prefWidth="71.0" styleClass="container-button"
                 text="Delete"/>
      </Pane>
      <TableView fx:id="ArtistsTable" layoutX="261.0" layoutY="155.0" prefHeight="312.0" prefWidth="411.0"
                 styleClass="list-container">
         <columns>
            <TableColumn fx:id="ID" prefWidth="33.0" text="ID"/>
            <TableColumn fx:id="colName" prefWidth="124.0" text="Name"/>
            <TableColumn fx:id="colCountry" prefWidth="123.0" text="Country"/>
            <TableColumn fx:id="colPath" prefWidth="130.0" text="Picture path"/>
         </columns>
      </TableView>
   </AnchorPane>
</GridPane>
